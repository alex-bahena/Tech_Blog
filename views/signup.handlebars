<div class="card">
  <div class="card-header">
    <h2>Sign Up</h2>
  </div>
  <div id="signup" role="tabpanel">
    <form id="signup-form" class="card-body">
      <div>
        <label for="username-input-signup">Username</label>
        <input placeholder="example1" type="text" id="username-input-signup" />
      </div>
      <div>
        <label for="email-input-signup">Email</label>
        <input placeholder="example@gmail.com" type="email" id="email-input-signup" />
      </div>
      <div>
        <label for="password-input-signup">Password</label>
        <input placeholder="more than 8 characters" type="password" id="password-input-signup" />
      </div>
      <button type="submit" id="signup-btn" class="btn" >Sign up</button>
      <a href="/login"><h2>I have an account</h2></a>
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>