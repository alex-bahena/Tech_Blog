<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{renderPost.title}}</h2>
      <div>
        Posted by {{renderPost.user.username}} on {{format_date renderPost.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{renderPost.content}}
    </div>
  </article>

  {{#if renderPost.comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each renderPost.comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{renderPost.user.username}}, {{format_date renderPost.createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{renderPost.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>